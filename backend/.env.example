# XCloud后端环境变量配置示例
# 复制此文件为.env并修改相应配置

# 应用配置
APP_NAME=XCloud多云对账平台
APP_VERSION=1.0.0
APP_MODE=debug

# 服务器配置
SERVER_PORT=8080

# 数据库配置
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=xcloud
DATABASE_USERNAME=xcloud
DATABASE_PASSWORD=xcloud123
DATABASE_MAX_OPEN_CONNS=100
DATABASE_MAX_IDLE_CONNS=20
DATABASE_CONN_MAX_LIFETIME=1800

# Redis配置
REDIS_ADDR=localhost:6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_MAX_RETRIES=3
REDIS_POOL_SIZE=10

# JWT配置
JWT_SECRET=xcloud-jwt-secret-key-2024-please-change-in-production
JWT_EXPIRE_HOURS=24
JWT_REFRESH_EXPIRE_HOURS=168

# 日志配置
LOG_LEVEL=info
LOG_FORMAT=json
LOG_OUTPUT=stdout

# 消息队列配置
RABBITMQ_URL=amqp://xcloud:xcloud123@localhost:5672/

# 云平台API配置（加密存储的示例）
TENCENT_CLOUD_SECRET_ID=
TENCENT_CLOUD_SECRET_KEY=
ALIBABA_CLOUD_ACCESS_KEY_ID=
ALIBABA_CLOUD_ACCESS_KEY_SECRET=
HUAWEI_CLOUD_ACCESS_KEY=
HUAWEI_CLOUD_SECRET_KEY=
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=

# 加密密钥（用于加密存储敏感信息）
ENCRYPTION_KEY=your-32-character-encryption-key

# 文件上传配置
UPLOAD_MAX_SIZE=10485760
UPLOAD_STORAGE_PATH=./uploads